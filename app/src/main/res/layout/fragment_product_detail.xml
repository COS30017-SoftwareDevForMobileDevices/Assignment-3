<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    tools:context=".fragments.productdetail.ProductDetailFragment">


    <!-- Top Bar with Back Button and Title -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/product_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="22dp"
            android:layout_height="44dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/txt_back_placeholder"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_detail"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageButton
            android:id="@+id/btn_favorite_top"
            android:layout_width="22dp"
            android:layout_height="44dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/txt_add_placeholder"
            android:src="@drawable/ic_favorite_outline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ProgressBar
        android:id="@+id/progress_bar_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_detail_toolbar"/>


    <TextView
        android:id="@+id/txt_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:letterSpacing="0.1"
        android:text="@string/txt_no_product"
        android:textColor="#646464"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_detail_toolbar" />


    <!-- Main product view-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/product_detail_toolbar"
        app:layout_constraintBottom_toTopOf="@+id/add_to_cart_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Image Container -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/image_card"
                android:layout_width="match_parent"
                android:layout_height="340dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <FrameLayout
                    android:id="@+id/frame_product_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#F5F5F5">

                    <ImageView
                        android:id="@+id/img_product"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:background="#EBEBEB"
                        android:padding="40dp"
                        android:contentDescription="@string/title_product" />

                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Product Info Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/txt_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_brand_placeholder"
                    android:textColor="#757575"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/txt_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_product_name_placeholder"
                    android:textColor="@android:color/black"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/txt_product_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_price_placeholder"
                    android:textColor="@color/red_main"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="24dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/detail_select_size"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_size_guide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/detail_size_guide"
                        android:textColor="@android:color/holo_green_dark"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Size Buttons -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:layout_marginBottom="24dp">

                        <RadioGroup
                            android:id="@+id/radio_group_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <RadioButton
                                android:id="@+id/radio_size_7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_button_radio_size"
                                android:button="@null"
                                android:text="@string/detail_size_7"
                                android:checked="true"
                                android:textColor="@drawable/txt_color_radio_size"
                                android:textSize="16sp"
                                android:paddingVertical="10dp"
                                android:paddingHorizontal="25dp"
                                android:layout_margin="4dp" />

                            <RadioButton
                                android:id="@+id/radio_size_7.5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_button_radio_size"
                                android:button="@null"
                                android:text="@string/detail_size_7.5"
                                android:textColor="@drawable/txt_color_radio_size"
                                android:textSize="16sp"
                                android:paddingVertical="10dp"
                                android:paddingHorizontal="25dp"
                                android:layout_margin="4dp" />

                            <RadioButton
                                android:id="@+id/radio_size_8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_button_radio_size"
                                android:button="@null"
                                android:text="@string/detail_size_8"
                                android:textColor="@drawable/txt_color_radio_size"
                                android:textSize="16sp"
                                android:paddingVertical="10dp"
                                android:paddingHorizontal="25dp"
                                android:layout_margin="4dp" />

                            <RadioButton
                                android:id="@+id/radio_size_8.5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_button_radio_size"
                                android:button="@null"
                                android:text="@string/detail_size_8.5"
                                android:textColor="@drawable/txt_color_radio_size"
                                android:textSize="16sp"
                                android:paddingVertical="10dp"
                                android:paddingHorizontal="25dp"
                                android:layout_margin="4dp" />

                            <RadioButton
                                android:id="@+id/radio_size_9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_button_radio_size"
                                android:button="@null"
                                android:text="@string/detail_size_9"
                                android:textColor="@drawable/txt_color_radio_size"
                                android:textSize="16sp"
                                android:paddingVertical="10dp"
                                android:paddingHorizontal="25dp"
                                android:layout_margin="4dp" />

                            <RadioButton
                                android:id="@+id/radio_size_9.5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_button_radio_size"
                                android:button="@null"
                                android:text="@string/detail_size_9.5"
                                android:textColor="@drawable/txt_color_radio_size"
                                android:textSize="16sp"
                                android:paddingVertical="10dp"
                                android:paddingHorizontal="25dp"
                                android:layout_margin="4dp" />

                            <RadioButton
                                android:id="@+id/radio_size_10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_button_radio_size"
                                android:button="@null"
                                android:text="@string/detail_size_10"
                                android:textColor="@drawable/txt_color_radio_size"
                                android:textSize="16sp"
                                android:paddingVertical="10dp"
                                android:paddingHorizontal="25dp"
                                android:layout_margin="4dp" />

                            <RadioButton
                                android:id="@+id/radio_size_10.5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_button_radio_size"
                                android:button="@null"
                                android:text="@string/detail_size_10.5"
                                android:textColor="@drawable/txt_color_radio_size"
                                android:textSize="16sp"
                                android:paddingVertical="10dp"
                                android:paddingHorizontal="25dp"
                                android:layout_margin="4dp" />

                            <RadioButton
                                android:id="@+id/radio_size_11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_button_radio_size"
                                android:button="@null"
                                android:text="@string/detail_size_11"
                                android:textColor="@drawable/txt_color_radio_size"
                                android:textSize="16sp"
                                android:paddingVertical="10dp"
                                android:paddingHorizontal="25dp"
                                android:layout_margin="4dp" />

                        </RadioGroup>

                </HorizontalScrollView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="@string/detail_product_description"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_product_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/detail_product_description"
                    android:textColor="#757575"
                    android:textSize="12sp"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="8dp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Add to Cart Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_to_cart_container"
        android:orientation="vertical"
        android:background="@drawable/border_top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_to_cart"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="@string/btn_add_to_cart"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            app:backgroundTint="@color/red_main"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_shopping_fill"
            app:iconGravity="textStart"
            app:iconSize="20dp"
            app:iconTint="#FFFFFF" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
