<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.home.HomeFragment">

    <!-- Top Navigation Bar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:titleTextColor="@color/black">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="12dp">

            <TextView
                android:id="@+id/tv_app_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KICKS"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageButton
                android:id="@+id/btn_search"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_search"
                app:tint="#000000"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_cart" />

            <ImageButton
                android:id="@+id/btn_cart"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_sort_by_size"
                app:tint="#000000"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>




    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingBottom="120dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/home_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_hero_banner"
                android:layout_width="match_parent"
                android:layout_height="340dp"
                android:layout_margin="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#000000">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/view_pager_hero"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/layout_hero_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="32dp"
                        android:paddingTop="120dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/tv_hero_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Summer '24 Drop"
                            android:textColor="#FFFFFF"
                            android:textSize="32sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_hero_subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="The latest styles have arrived. Get them before\nthey're gone."
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/btn_shop_now"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:background="@drawable/bg_button_main"
                            android:backgroundTint="#FF0000"
                            android:paddingHorizontal="32dp"
                            android:paddingVertical="12dp"
                            android:text="Shop Now"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"/>

                    </LinearLayout>

                    <!-- Indicator Dots -->
                    <!--                    <com.google.android.material.tabs.TabLayout-->
                    <!--                        android:id="@+id/tab_indicator"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_marginBottom="16dp"-->
                    <!--                        android:background="@android:color/transparent"-->
                    <!--                        app:layout_constraintBottom_toBottomOf="parent"-->
                    <!--                        app:layout_constraintEnd_toEndOf="parent"-->
                    <!--                        app:layout_constraintStart_toStartOf="parent"-->
                    <!--                        app:tabBackground="@drawable/tab_indicator_selector"-->
                    <!--                        app:tabGravity="center"-->
                    <!--                        app:tabIndicatorHeight="0dp"-->
                    <!--                        app:tabMaxWidth="12dp"-->
                    <!--                        app:tabMinWidth="12dp"-->
                    <!--                        app:tabPaddingEnd="4dp"-->
                    <!--                        app:tabPaddingStart="4dp" />-->

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <!-- Brands Section -->
            <HorizontalScrollView
                android:id="@+id/horizontal_scroll_brands"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="16dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/layout_brand_filters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btn_brand_nike"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_button_brand"
                        android:contentDescription="Nike"
                        android:padding="12dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/lg_nike"
                        android:elevation="4dp"
                        android:translationZ="2dp" />

                    <ImageButton
                        android:id="@+id/btn_brand_adidas"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_button_brand"
                        android:contentDescription="Adidas"
                        android:padding="12dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/lg_adidas" />

                    <ImageButton
                        android:id="@+id/btn_brand_newEra"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_button_brand"
                        android:contentDescription="New Era"
                        android:padding="12dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/lg_new_era" />

                    <ImageButton
                        android:id="@+id/btn_brand_puma"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_button_brand"
                        android:contentDescription="Puma"
                        android:padding="12dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/lg_puma" />

                    <ImageButton
                        android:id="@+id/btn_brand_essentials"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bg_button_brand"
                        android:contentDescription="Essentials"
                        android:padding="12dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/lg_essentials" />

                </LinearLayout>

            </HorizontalScrollView>

            <!-- Featured Kicks Section -->
            <TextView
                android:id="@+id/tv_featured_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="Featured Kicks"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- RecyclerView for Product Grid -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_products"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:paddingHorizontal="10dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>